@model Categoria
@{
    ViewData["Title"] = "EliminarCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar informacion de Categoria
    </div>
    <div class="card-body">
        <dl>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.categ_detalle)
            </dd>
        </dl>
        <form asp-action="EliminarCategoria" asp-controller="Categoria" method="post">
            <input asp-for="id_categoria" type="hidden" class="form-control" />
            <div class="alert alert-danger" role="alert">
                <p>¿Seguro desea eliminar el registro?</p>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Eliminar</button>
            <a asp-action="Listar" asp-controller="Categoria" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>

