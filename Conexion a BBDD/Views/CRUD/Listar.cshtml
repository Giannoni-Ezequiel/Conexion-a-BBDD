@model List<Cliente>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>Index</title>
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
	</head>
	<body>
		<div class="container">
			<div class="table-responsive">
				<div class="table-wrapper">
					<div class="table-title">
						<div class="row">
							<div class="col-xs-6">
								<br />
								<h2>Gestionar <b>Clientes</b></h2>
								<br />
							</div>
							<div class="col-xs-6">
                                 <a asp-action="Guardar" asp-controller="Cliente" class="btn btn-primary">
                                    <i class="material-icons">&#xE147;</i> <span>Crear Cliente</span>
                                  </a>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                       <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido</th>
                                    <th scope="col">DNI</th>
                                    <th scope="col">CUIT</th>
                                    <th scope="col">Razon Social</th>
                                    <th scope="col">Tipo</th>
                                    <th scope="col">IDUser</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                       </thead>
            
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                        <th>@item.id_cliente</th>
                                            <th>@item.clie_nombre</th>
                                            <th>@item.clie_apellido</th>
                                            <th>@item.clie_dni</th>
                                            <th>@item.clie_cuit</th>
                                            <th>@item.clie_razon_social</th>
                                            <th>@item.clie_tipo</th>
                                            <th>@item.clie_id_usuario</th>
                                            <td><a asp-action="Editar" asp-controller="CRUD" class="edit" asp-route-id="@item.id_cliente">
                                                    <i class="material-icons" data-toggle="tooltip" title="Edit">
                                                        <span class="material-symbols-outlined">drive_file_rename_outline</span>
                                                    </i>
                                                </a>
                                                <a asp-action="Eliminar" asp-controller="CRUD" class="bdanger" asp-route-id="@item.id_cliente">
                                                    <i class="material-icons" data-toggle="tooltip" title="Delete">
												        <span class="material-symbols-outlined">delete</span>
											        </i>
									            </a>
									        </td>
								        </tr>
							        </tbody>		
						        }
					</table>
				</div>
			</div>
		</div>
	</body>
</html>


    
  