@model List<Cliente>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de Clientes
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="CRUD" class="btn btn-primary">Crear Nuevo</a>
        <hr />
     
        <table class="d-lg-table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model){
                <tr> 
                    <td>@item.id</td>
                    <td>@item.nombre</td>
                    <td>@item.telefono</td>
                    <td>@item.email</td>
                    <td>
                        <a asp-action="Editar" asp-controller="CRUD" class="btn-primary btn-sm" asp-route-id="@item.id">Editar</a>
                        <a asp-action="Eliminar" asp-controller="CRUD" class="btn btn-danger" asp-route-id="@item.id">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


    
  