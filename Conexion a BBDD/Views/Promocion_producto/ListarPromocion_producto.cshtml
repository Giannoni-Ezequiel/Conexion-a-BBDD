@model List<Promocion_producto>
@{
    ViewData["Title"] = "ListarPromocion_producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>Index</title>
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
	</head>
	<body>
		<div class="container">
			<div class="table-responsive">
				<div class="table-wrapper">
					<div class="table-title">
						<div class="row">
							<div class="col-xs-6">
								<br />
							<h2>Gestionar <b>Promocion_producto</b></h2>
								<br />
							</div>
							<div class="col-xs-6">
								<a asp-action="GuardarPromocion_producto" asp-controller="Promocion_producto" class="btn btn-success"><i class="material-icons">&#xE145; </i> <span> Crear Promocion_producto</span></a>
							</div>
						</div>
					</div>
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Nº Promocion</th>
								<th>Nº Producto</th>
								<th>Nº Promocion_producto</th>
								<th>Fecha de inicio</th>
								<th>Fecha Fin</th>
								<th>Acción</th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tbody>
								<tr>
									<th>@item.id_promo</th>
									<th>@item.id_producto</th>
									<th>@item.promo_numero</th>
									<th>@item.promo_fecha_inicio</th>
									<th>@item.promo_fecha_fin</th>
									<td>
									<a asp-action="EditarPromocion_producto" asp-controller="Promocion_producto" class="edit" asp-route-id="@item.promo_numero">
											<i class="material-icons" data-toggle="tooltip" title="Edit">
												<span class="material-symbols-outlined">
													drive_file_rename_outline
												</span>
											</i>
										</a>
									<a asp-action="EliminarPromocion_producto" asp-controller="Promocion_producto" class="bdanger" asp-route-id="@item.promo_numero">
											<i class="material-icons" data-toggle="tooltip" title="Delete">
												<span class="material-symbols-outlined">
													delete
												</span>
											</i>
										</a>
									</td>
								</tr>
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</body>
</html>

