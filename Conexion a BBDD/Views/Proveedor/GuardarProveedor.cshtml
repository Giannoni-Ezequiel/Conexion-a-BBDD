@model Proveedor
@{
    ViewData["Title"] = "GuardarProveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <br />
        <h2>Guardar Proveedor</h2>
        <br />
        <form asp-action="GuardarProveedor" asp-controller="Proveedor" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <input asp-for="provee_nombre" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Apellido</label>
                <input asp-for="provee_apellido" type="text" class="form-control">
            </div>
            <div class="form-group">
            <label for="exampleInputPassword1">Direccion</label>
                <input asp-for="provee_direccion" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">CUIT</label>
                <input asp-for="provee_cuit" type="text" class="form-control">
            </div>
            <br />
            <button type="submit" class="btn btn-primary"> Guardar</button>
            <a asp-action="ListarProveedor" asp-controller="Proveedor" class="btn btn-warning">Volver al listado</a>
        </form>
    </body>
</html>

