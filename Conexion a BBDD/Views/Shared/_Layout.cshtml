        {
            <center>
                <h2>
                    Estas Logueado = g@Usuario.usua_nombre
                </h2>
                <form asp-controller="Security" asp-action="SignOut" method="post">
                    <button type="submit">Salir</button>
                </form>
            </center>    
        }-->
    </body>
</html>
