@model List<Producto>
@{
    ViewData["Title"] = "VisualizarProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>Index</title>
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	</head>
	<body>
		<h2>Lista de productos</h2>
		<div class="container">
			<div class="table-responsive">
				<div class="table-wrapper">
					<div class="table-title">
						<div class="row">
							<div class="col-xs-6">
								<h2>Productos</h2>
							</div>
						</div>
					</div>
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Nombre</th>
								<th>Precio</th>
								<th>Stock</th>
								<th>Detalle</th>
								<th>Imagen</th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tbody>
								<tr>
									<th>@item.prod_nombre</th>
									<th>@item.prod_precio</th>
									<th>@item.prod_stock</th>
									<th>@item.prod_detalle</th>
									<th>@item.prod_img</th>
								</tr>
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</body>
</html>

