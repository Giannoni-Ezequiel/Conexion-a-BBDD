@model List<Producto>
@{
    ViewData["Title"] = "ListarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>Index</title>
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
	</head>
	<body>
		<div class="container">
			<div class="table-responsive">
				<div class="table-wrapper">
					<div class="table-title">
						<div class="row">
							<div class="col-xs-6">
								<br />
								<h2>Gestionar <b>Producto</b></h2>
								<br />
							</div>
							<div class="col-xs-6">
							<a asp-action="GuardarProductos" asp-controller="Producto" class="btn btn-success"><i class="material-icons">&#xE145; </i> <span> Crear Producto</span></a>
							</div>
						</div>
					</div>
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Nº Producto</th>
								<th>Nombre</th>
								<th>Precio</th>
								<th>Stock</th>
								<th>Detalle</th>
								<th>IMG</th>
								<th>Nº Proveedor</th>
								<th>Acción</th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tbody>
								<tr>
									<th>@item.id_producto</th>
									<th>@item.prod_nombre</th>
									<th>@item.prod_precio</th>
									<th>@item.prod_stock</th>
									<th>@item.prod_detalle</th>
									<th>@item.prod_img</th>
									<th>@item.prod_proveedor</th>
									<td>
									<a asp-action="EditarProductos" asp-controller="Producto" class="edit" asp-route-id="@item.id_producto">
											<i class="material-icons" data-toggle="tooltip" title="Edit">
												<span class="material-symbols-outlined">
													drive_file_rename_outline
												</span>
											</i>
										</a>
									<a asp-action="EliminarProductos" asp-controller="Producto" class="bdanger" asp-route-id="@item.id_producto">
											<i class="material-icons" data-toggle="tooltip" title="Delete">
												<span class="material-symbols-outlined">
													delete
												</span>
											</i>
										</a>
									</td>
								</tr>
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</body>
</html>


