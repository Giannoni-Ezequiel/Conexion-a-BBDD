@model List<Tipo_de_cliente>
@{
    ViewData["Title"] = "ListarTipo_de_cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>Index</title>
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
	</head>
	<body>
		<div class="container">
			<div class="table-responsive">
				<div class="table-wrapper">
					<div class="table-title">
						<div class="row">
							<div class="col-xs-6">
								<br />
							<h2>Gestionar <b>Tipo de clientes</b></h2>
							<br />
							</div>
							<div class="col-xs-6">
							<a asp-action="GuardarTipo_de_cliente" asp-controller="Tipo_de_cliente" class="btn btn-success"><i class="material-icons">&#xE145; </i> <span> Crear Tipo de cliente</span></a>
						</div>
						</div>
					</div>
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Nº Tipo</th>
								<th>Detalle</th>
								<th>Acción</th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tbody>
								<tr>
								<th>@item.id_tipo_cliente</th>
								<th>@item.clie_tipo_descripcion</th>
								<td>
										<a asp-action="EditarTipo_de_cliente" asp-controller="Tipo_de_cliente" class="edit" asp-route-id="@item.id_tipo_cliente">
										<i class="material-icons" data-toggle="tooltip" title="Edit">
												<span class="material-symbols-outlined">
													drive_file_rename_outline
												</span>
											</i>
										</a>
										<a asp-action="EliminarTipo_de_cliente" asp-controller="Tipo_de_cliente" class="bdanger" asp-route-id="@item.id_tipo_cliente">
										<i class="material-icons" data-toggle="tooltip" title="Delete">
												<span class="material-symbols-outlined">
													delete
												</span>
											</i>
										</a>
									</td>
								</tr>
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</body>
</html>


