@model Promociones
@{
    ViewData["Title"] = "GuardarPromociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <br />
        <h2>Guardar Promocion</h2>
        <br />
        <form asp-action="GuardarPromociones" asp-controller="Promociones" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <input asp-for="promo_nombre" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Descuento</label>
                <input asp-for="descuento" type="text" class="form-control">
            </div>
            <br />
            <button type="submit" class="btn btn-primary"> Guardar</button>
            <a asp-action="ListarPromociones" asp-controller="Promociones" class="btn btn-warning">Volver al listado</a>
        </form>
    </body>
</html>

