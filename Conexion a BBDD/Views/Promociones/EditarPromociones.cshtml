@model Promociones
@{
    ViewData["Title"] = "EditarPromociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <br />
        <h2>Editar Promocion @Html.DisplayTextFor(m => m.promo_nombre)</h2>
        <br />
    <form asp-action="EditarPromociones" asp-controller="Promociones" method="post">
            <div class="form-group">
                <div class="form-group">
                    <label for="exampleInputEmail1">Nº Promocion</label>
                    <input asp-for="id_promo" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Nombre</label>
                    <input asp-for="promo_nombre" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Descuento</label>
                    <input asp-for="descuento" type="text" class="form-control">
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Editar</button>
                <a asp-action="ListarPromociones" asp-controller="Promociones" class="btn btn-warning">Volver al listado</a>
            </div>
        </form>
    </body>
</html>

