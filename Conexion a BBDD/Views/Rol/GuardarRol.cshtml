@model Rol
@{
    ViewData["Title"] = "GuardarRol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <br />
        <h2>Guardar Rol</h2>
        <br />
        <form asp-action="GuardarRol" asp-controller="Rol" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Detalle</label>
                <input asp-for="rol_detalle" type="text" class="form-control">
            </div>
            <br />
            <button type="submit" class="btn btn-primary"> Guardar</button>
            <a asp-action="ListarRol" asp-controller="Rol" class="btn btn-warning">Volver al listado</a>
        </form>
    </body>
</html>

