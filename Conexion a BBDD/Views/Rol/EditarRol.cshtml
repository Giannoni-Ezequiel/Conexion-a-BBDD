@model Rol
@{
    ViewData["Title"] = "EditarRol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <br />
        <h2>Editar Rol @Html.DisplayTextFor(m => m.rol_detalle)</h2>
        <br />
        <form asp-action="EditarRol" asp-controller="Rol" method="post">
            <div class="form-group">
                <div class="form-group">
                    <label for="exampleInputEmail1">Nº Rol</label>
                    <input asp-for="id_rol" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Detalle</label>
                    <input asp-for="rol_detalle" type="text" class="form-control">
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Editar</button>
                <a asp-action="ListarRol" asp-controller="Rol" class="btn btn-warning">Volver al listado</a>
            </div>
        </form>
    </body>
</html>

